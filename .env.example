# Discord Bot Configuration
TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here

# Development Only - For instant command updates
# Remove or leave empty for global deployment (takes up to 1 hour)
GUILD_ID=your_test_server_id_here

# Database
# SQLite (Local Development)
DATABASE_URL="file:./dev.db"

# PostgreSQL (Production - Render, Railway, etc.)
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Health Server (for Render/Railway)
START_HEALTH_SERVER=true
PORT=3000
